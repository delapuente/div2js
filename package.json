{
  "name": "div2js",
  "version": "0.0.1",
  "description": "A DIV2 transpiler for the modern web",
  "scripts": {
    "build": "npm run embed-wrapper && webpack",
    "demos": "npm run embed-wrapper && webpack-dev-server",
    "dev": "concurrently \"npm run watch\" \"karma start ./tests/karma.conf.js\"",
    "embed-wrapper": "node scripts/embed-wrapper.js",
    "linter": "tslint -c tslint.json 'src/**/*.ts'",
    "parser": "jison src/grammar.y --module-type commonjs --outfile src/div2lang.js",
    "test": "karma start ./tests/karma.conf.js --single-run",
    "watch": "concurrently \"npm run watch:grammar\" \"npm run watch:wrapper\"",
    "watch:grammar": "watch-run -p 'src/grammar.y' npm run parser",
    "watch:wrapper": "watch-run -p 'src/runtime/wrapper.js.in' npm run embed-wrapper"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/delapuente/div2js"
  },
  "keywords": [
    "div2",
    "game",
    "engine",
    "transpiler",
    "jison"
  ],
  "author": "Salvador de la Puente Gonz√°lez <salva@unoyunodiez.com> (http://unoyunodiez.com) @salvadelapuente",
  "license": "MIT",
  "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/delapuente/div2js/issues"
  },
  "homepage": "https://github.com/delapuente/div2js",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/escodegen": "0.0.6",
    "@types/mocha": "^2.2.48",
    "@types/sinon": "^4.3.3",
    "awesome-typescript-loader": "^3.5.0",
    "chai": "^4.2.0",
    "concurrently": "^3.6.1",
    "escodegen": "^1.11.0",
    "esprima": "^3.1.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jison": "^0.4.18",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.3",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^1.3.4",
    "karma-webpack": "^2.0.13",
    "mocha": "^4.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^2.14.0",
    "source-map-loader": "^0.2.4",
    "tslint": "^5.11.0",
    "tslint-config-semistandard": "^7.0.0",
    "typescript": "^2.9.2",
    "watch-run": "^1.2.5",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.3"
  }
}
