{
  "name": "div2js",
  "version": "0.0.1",
  "description": "A DIV2 transpiler for the modern web",
  "scripts": {
    "build": "npm run embed-wrapper && webpack --progress",
    "demos": "npm run embed-wrapper && webpack serve",
    "dev": "concurrently \"npm run watch\" \"karma start ./tests/karma.conf.js\"",
    "embed-wrapper": "node scripts/embed-wrapper.js",
    "linter": "eslint 'src/**/*.ts'",
    "parser": "jison src/grammar.y --module-type commonjs --outfile src/div2lang.js",
    "test": "karma start ./tests/karma.conf.js --single-run",
    "watch": "concurrently \"npm run watch:grammar\" \"npm run watch:wrapper\"",
    "watch:grammar": "watch-run -p 'src/grammar.y' npm run parser",
    "watch:wrapper": "watch-run -p 'src/runtime/wrapper.js.in' npm run embed-wrapper"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/delapuente/div2js"
  },
  "keywords": [
    "div2",
    "game",
    "engine",
    "transpiler",
    "jison"
  ],
  "author": "Salvador de la Puente Gonz√°lez <salva@unoyunodiez.com> (http://unoyunodiez.com) @salvadelapuente",
  "license": "MIT",
  "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/delapuente/div2js/issues"
  },
  "homepage": "https://github.com/delapuente/div2js",
  "devDependencies": {
    "@ephesoft/webpack.istanbul.loader": "^2.2.0",
    "@types/chai": "^4.3.1",
    "@types/escodegen": "0.0.10",
    "@types/mocha": "^10.0.7",
    "@types/sinon": "^17.0.3",
    "@types/webgl2": "^0.0.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "chai": "^4.3.6",
    "concurrently": "^8.2.2",
    "escodegen": "^2.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "esprima": "^4.0.1",
    "jison": "^0.4.18",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-firefox-launcher": "^2.1.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-webpack": "^5.0.1",
    "mocha": "^10.7.0",
    "pixelmatch": "^6.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "tslint-config-semistandard": "^8.0.1",
    "typescript": "^5.5.4",
    "watch-run": "^1.2.5",
    "webpack": "5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
